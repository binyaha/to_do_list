<%= form_for @user do |f| %>
<div class="container well col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
  <h2 class="text-center">Log in</h2>
  <br />

  <form action="">
    <div class="row">
    <div class="form-group col-xs-10 col-xs-offset-1">
      <%= f.label :name  %>
      <br>
      <%= f.text_field :name, class: "col-xs-12" , placeholder: "Enter your name" %>
    </div>
  </div>
  <div class="row">

    <div class="form-group col-xs-10 col-xs-offset-1">
      <%= f.label :password %>
      <br>
      <%= f.text_field :password,class: "col-xs-12", placeholder: "Enter the password" %>
    </div>
  </div>

    <br>
    <div class="form-group col-xs-10 col-xs-offset-1">
      <%= f.submit "Login", class: "btn btn-primary" %>
    </div>
  </form>
<% end %>


